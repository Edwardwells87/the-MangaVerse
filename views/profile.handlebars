
  <div class="container">
    <div class="row mt-5">
      <div class="col-md-6">
        <h2>Welcome, {{name}}!</h2>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-md-6">
        <h3>Create a New Blog:</h3>

        <form class="form new-blog-form" id="submitBlog">
          <div class="form-group">
            <label for="blogname">Blog Name:</label>
            <input class="form-input" type="text" id="blog-name" name="blog-name" />
          </div>
          <div class="form-group">
            <label for="Manga Name">Manga Name:</label><textarea class="form-input" id="manga-name" name="manga-name"></textarea>
          </div>
          <div class="form-group">
            <label for="Blog-Body">Blog Body:</label>
            <textarea class="form-input" id="blog-body" name="blog-Body"></textarea>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary" id="create">Create</button>
          </div>
        </form>
      </div>

      {{#if Blogs.length}}
      <div class="col-md-6 blog-list">
        <h3>Your Blogs:</h3>

        {{#each Blogs as |Blog|}}
        <div class="row mb-2">
          <div class="col-md-8">
            <h4><a href="/blog/{{blog.id}}">{{blog.Blog_Name}}</a></h4>
          </div>
          <div class="col-md-4">
            <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
          </div>
        </div>
        {{/each}}
      </div>
      {{/if}}
    </div>
  </div>
<script src="/js/profile.js"></script>